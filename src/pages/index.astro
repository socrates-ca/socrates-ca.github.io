                <tr>
                  <th scope="col" class="px-6 py-3"></th>
                  <th scope="col" class="px-6 py-3">Friday 4</th>
                  <th scope="col" class="px-6 py-3">Saturday 5</th>
                  <th scope="col" class="px-6 py-3">Sunday 6</th>
                </tr>
              </thead>
              <tbody>
                <tr
                  class="border-b odd:bg-white even:bg-gray-50 hover:bg-gray-50 dark:border-gray-700 odd:dark:bg-gray-900 even:dark:bg-gray-800 dark:hover:bg-gray-600"
                >
                  <th scope="row" class="whitespace-nowrap px-6 py-4 font-semibold text-red-700 dark:text-yellow-500"
                    >before</th
