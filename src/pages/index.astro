</DefaultLayout>

<style lang="scss">
  .timeline-container {
    width: 100%;
    overflow: hidden;
  }
  .timeline {
    display: flex;
    padding: 0;
    text-align: center;
  }
  .timeline-slide {
    flex-grow: 1;
  }
  .timeline-slide .slide-top {
    width: 100%;
    margin-bottom: 20px;
    padding: 0px 40px;
  }
  .timeline-slide .slide-bottom {
    padding: 20px 40px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
    border-top: 4px solid var(--secondary-200);
    position: relative;
  }
  .timeline-slide .slide-bottom:before {
    content: '';
    width: 25px;
    height: 25px;
    background-color: #e8eeff;
    border-radius: 25px;
    border: 4px solid var(--secondary-200);
    position: absolute;
    top: -15px;
    left: calc(50% - 12px); // align circle to center
    transition: all 200ms ease-in;
  }
</style>
